<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="helloDialog" title="Hello {/recipient/name}">
        <content>
            <core:Icon id="dialog_icon" src="sap-icon://hello-world" size="8rem" class="sapUiMediumMargin" />
        </content>
        <beginButton>
            <Button id="dialog_button" text="{i18n>dialogCloseButtonText}" press=".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
